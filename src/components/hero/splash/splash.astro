---
import MarkdownIt from 'markdown-it';
import Image from 'src/components/global/image/image.astro';
import CTA from 'src/components/global/cta/cta.astro';
const { content, image, cta } = Astro.props;
const md = new MarkdownIt({ html: true });
---
<style lang="scss" is:global>
  .wrapper[data-hero-splash] {
    @extend %primary-wrapper;
    
    @include media-tablet {
      display: flex;
      flex-direction: row-reverse;
      align-items: center;
      justify-content: center;
      min-height: 80vh;
    }

    .content {
      @include media-tablet {
        flex: 0 1 auto;
      }
      @include media-tablet-max {
        padding-bottom: 4rem;
      }
    }
    .image {
      position: relative;
      z-index: -1;
      margin-bottom: -100px;

      @include media-tablet {
        flex: 0 0 40%;
        margin-bottom: 0;
      }
    }
  }
</style>

<div class="wrapper" data-hero-splash>
  <div class="image">
  { image && <Image {...image} width="768" height="900" />}
  </div>
  <div class="content">
    { content && <div class="rt" set:html={md.render(content)}></div>}
    { cta && <CTA {...cta} />}
  </div>
</div>
