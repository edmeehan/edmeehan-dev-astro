---
import MarkdownIt from 'markdown-it';
import Card from "src/components/cards/post.astro";
const { content, cards } = Astro.props;
const md = new MarkdownIt({ html: true });
---
<style lang="scss" is:global>
  .cards-posts {
    @extend %primary-wrapper;

    > header {
      padding-top: 4.5rem;
      padding-bottom: 3rem;
    }

    > ul {
      margin: 0;
      padding-left: 0;
      padding-bottom: 4.5rem;
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 2em;

      > li {
        @include media-tablet {
          flex: 0 0 30%;
        }
      }
    }
  }
</style>

<div class="cards-posts" data-cards-posts>
  <header class="text-center">
    { content && <div class="rt" set:html={md.render(content)}></div>}
  </header>
  { cards && (
    <ul>
      { cards.map((item) => (
        <li>
          <Card show_excerpt={true} {...item}/>
        </li>
      ))}
    </ul>
  )}
</div>