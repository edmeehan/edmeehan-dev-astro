---
import data from "data/footer.json"
import CTA from "src/components/global/cta/cta.astro"
import Link from "src/components/global/link/link.astro"
import MarkdownIt from 'markdown-it';
const md = new MarkdownIt({ html: true });
const { story, small_print, links_list } = data;
---
<style lang="scss" is:global>
  footer[data-layout-footer] {
    padding: $text_mobile_line_height_root;
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    max-width: $layout_max_width;
    width: 100%;
    box-sizing: border-box;
    margin: 0 auto;
    border-top: solid 1px $header_border_color;

    ul {
      padding-left: 0;
      list-style: none;
      display: flex;
      flex-wrap: wrap;
      gap: .5em;
    }

    .block-img {
      display: inline-block;
      img {
        border-radius: $radius_circle;
      }
    }

    > .content {
      flex: 1 0 50%;
    }

    > .links {
      flex: 1 1 30%;
      opacity: .6;
      
      .h3 {
        margin-bottom: 0;
      }

      ul {
        margin-top: 0;
        margin-bottom: 1.5rem;
      }
    }

    > .step-down {
      flex: 1 0 100%;
    }

    @include media-tablet-max {
      text-align: center;
      ul {
        justify-content: center;
      }
      > .content {
        flex: 1 0 100%;
        p.rt {
          margin-left: auto;
          margin-right: auto;
        }
      }

      > .links {
        flex: 1 0 100%;
      }
    }

    @include media-tablet {
      > .links {
        text-align: right;
        margin-top: 1.5rem;
      }

      ul {
        justify-content: flex-end;
      }

      .block-img {
        float: left;
        margin-left: -$text_desktop_line_height;
        padding: $text_desktop_line_height;
        shape-outside: circle(50%) padding-box;
      }
    }
  }
</style>

<footer data-layout-footer>
  <div class='content'>
    <div class="rt" set:html={md.render(story)}></div>
  </div>
  <nav class='links'>
    { links_list?.map(item => (
      <h6 class="h3">{ item.title }</h6>
      <ul>
        { item.links?.map (item => (
          <li>{ item.style ? <CTA {...item} /> : <Link {...item}/> }</li>
        ))}
      </ul>
    ))}
  </nav>
  <div class='step-down rt-center'>
    <div class="rt" set:html={md.render(small_print)}></div>
    <div>&copy; {new Date().getFullYear()}. All rights reserved.</div>
  </div>
</footer>