---
import Page from "@shared/page";
import Layout from "./Layout.astro";

type Props = {
  frontmatter: {
    title: string;
  };
};

const { frontmatter } = Astro.props;

if (!frontmatter) {
  throw new Error("Page frontmatter must be defined");
}
---

<Layout {...frontmatter}>
  <Page bookshop:live contentBlocks={frontmatter.content_blocks} />
</Layout>