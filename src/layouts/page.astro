---
import MasterLayout from "./master.astro";
import PageComponents from "src/shared/astro/page.astro";
import PageSVG from "src/components/svg/page.astro";

type Props = {
  frontmatter: {
    content_blocks: any;
  };
};

const { frontmatter, frontmatter: {content_blocks} } = Astro.props;

if (!frontmatter) {
  throw new Error("Page frontmatter must be defined");
}

---
<MasterLayout {...frontmatter}>
  <PageSVG />
  <PageComponents bookshop:live contentBlocks={content_blocks} />
</MasterLayout>